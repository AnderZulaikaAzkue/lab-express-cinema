<h2>Ironhack Cinema</h2>
<h4>Click on the movie to check the showtimes!</h4>
<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each movies as |movie|}}
    <div class="col">
      <div class="card">
        <img src="{{movie.image}}" class="card-img-top" alt="movies_image" style="width:100%"; ;/>
        <div class="card-body text-center">
          <h5>{{movie.title}}</h5>
          <a class="click" href="/{{movie.id}}">See more</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>